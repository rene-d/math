{
    "files.trimTrailingWhitespace": true,

    // https://code.visualstudio.com/docs/python/linting
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "files.associations": {
        "type_traits": "cpp",
        "limits": "cpp",
        "iosfwd": "cpp",
        "algorithm": "c",
        "cassert": "cpp",
        "random": "cpp",
        "__locale": "cpp"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.pytest_cache": true,
        "**/.ropeproject": true
    }
}